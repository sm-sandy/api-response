{
    "name": "sm-sandy/api-response",
    "description": "The ApiResponse package is a simple yet powerful Laravel package designed to streamline the process of formatting API responses. It provides a convenient way to structure and return JSON responses in a consistent format for both success and error scenarios.",
    "keywords": [
        "sm-andy/api-response",
        "laravel",
        "sm-andy/api-response"
    ],
    "homepage": "https://github.com/sm-sandy/api-response",
    
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Sandy\\ApiResponse\\": "src/"
        }
    },
    "authors": [
        {
            "name": "sm-sandy",
            "email": "sm.sandy2021@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },

    "extra": {
        "laravel": {
            "providers": [
                "Sandy\\ApiResponse\\ApiResponseServiceProvider"
            ],
            "aliases": {
                "ApiResponse": "Sandy\\ApiResponse\\ApiResponse"
            }
        }
    }
}
